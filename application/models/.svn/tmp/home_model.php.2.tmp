	function reviewlst($table,$id)
	{
		$query="
						select 
							* 
						from 
							". $table ." 
						order by 
							posted DESC";
		if($id['count']==0)
		{
			$query .= " LIMIT  ".$id['start']  ." , ". $id['limit'] ."";
		}
							
		$result= $this->db->query($query);
		$data['totalrows']=$result->num_rows();			
		$data['result']=$result->result();    
		return $data;
	}
	
